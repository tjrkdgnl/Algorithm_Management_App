<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.ama.algorithmmanagement.viewmodel.test.RealViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:hint="id입력"
                android:paddingHorizontal="20dp"
                android:text="@={viewModel.userId}" />

            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:hint="pwd입력"
                android:paddingHorizontal="20dp"
                android:text="@={viewModel.password}" />

            <EditText
                android:id="@+id/problemId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="문제번호 입력"
                android:paddingHorizontal="20dp"
                android:text="@={viewModel.problemId}" />

            <Button
                style="@style/TestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.saveUserInfo()}"
                android:text="유저정보 저장" />

            <Button
                style="@style/TestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.getUserInfo()}"
                android:text="유저정보 가져오기" />

            <Button
                style="@style/TestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.getProblem()}"
                android:text="문제 가져오기" />

            <Button
                style="@style/TestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.getSolvedProblems()}"
                android:text="푼 문제 가져오기" />

            <Button
                style="@style/TestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.getStats()}"
                android:text="유저 통계 가져오기" />

            <Button
                style="@style/TestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.getSearchProblemList()}"
                android:text="문제 검색" />

            <Button
                style="@style/TestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.getUnSolvedProblems()}"
                android:text="풀지 못한 문제 가져오기" />

        </LinearLayout>
    </ScrollView>
</layout>
